<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:padding="8dp"
    android:background="@drawable/b_block_mark"
    android:layout_margin="4dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10">

        <TextView
            android:id="@+id/mark_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ММА"/>

        <TextView
            android:id="@+id/mark_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mark_title"
            tools:text="Теслюк В.Н." />

    </RelativeLayout>

    <TextView
        android:id="@+id/mark_type"
        android:layout_weight="0"
        android:padding="8dp"
        android:textColor="@color/gray"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Экзамен"/>

    <View
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"/>

    <TextView
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:id="@+id/mark_value"
        android:textColor="@color/mark_green"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="зач" />


</LinearLayout>